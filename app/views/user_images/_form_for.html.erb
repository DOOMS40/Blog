<div class="container">
	<div class="row">
		<div class="col-md-12">
			<%= form_for @user_image do |f| %>
        
        <div class="col-md-12">
        	<%= f.label :description, "Описание:" %> <br>
        	<%= f.text_field :description %>
        </div>
				
        <div class="col-md-12">
        	<%= f.label :image, "Картинка:" %><br>
        	<%= f.file_field :image %><br>
        </div>

        <div class="col-md-12">
        	<%= f.button 'Create', submit: '', class: 'btn btn-success' %>
        </div>

			<% end %>
		</div>
	</div>
</div>